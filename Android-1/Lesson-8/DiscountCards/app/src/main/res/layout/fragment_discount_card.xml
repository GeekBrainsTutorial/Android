<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:elevation="1dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="25dp"
    card_view:contentPaddingBottom="20dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    tools:context="ru.geekbrains.discountcards.DiscountCard">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="48dp"
            android:text="shopname"
            android:textSize="42dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:text="1%"
            android:textSize="24dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.651"
            card_view:layout_constraintStart_toEndOf="@+id/shopName"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/numberCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="11223344556677"
            android:textSize="36dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/shopName" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
